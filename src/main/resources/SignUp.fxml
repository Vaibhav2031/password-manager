<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.vs.controller.SignUpController" alignment="center" hgap="10" vgap="10" style="-fx-padding: 20;">
    <!-- Header label -->
    <Label text="Sign Up" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" GridPane.columnSpan="2" />

    <!-- Username Label and Field -->
    <Label text="Username:" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Password Label and Field -->
    <Label text="Password:" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Confirm Password Label and Field -->
    <Label text="Confirm Password:" GridPane.rowIndex="3"/>
    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Sign Up Button -->
    <Button fx:id="signUpButton" text="Sign Up" onAction="#handleSignUp" GridPane.rowIndex="4" GridPane.columnSpan="2" />

    <!-- Sign In Prompt -->
    <Label text="Already have an account? " GridPane.rowIndex="5" GridPane.columnSpan="1"/>
    <Hyperlink text="Sign In" fx:id="goToSignInButton" onAction="#goToSignIn" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Other UI elements like TextField and Button -->

    <Label fx:id="statusLabel" layoutX="50" layoutY="200" text="" GridPane.rowIndex="6" GridPane.columnSpan="2" style="-fx-text-fill: red; -fx-font-weight: bold;" />

</GridPane>





